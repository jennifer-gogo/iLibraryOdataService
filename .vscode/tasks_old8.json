              "args": [
                  "com.ilibrary.mobile.csdl.xml",
                  "${workspaceFolder}",
                  "-workspace", "${workspaceFolder}",
                  "-application", "iLibraryOdata",
                  "-version", "1.2.1",
                  "-bind", "sap_ase:MobileDemoDB",
